pipeline {
    agent any

    stages {
        stage('Clone Git repository') {
            steps {
                git url: 'https://github.com/pavliyuk/devops2023', branch: 'test'
            }
        }

        stage('Terraform Deployment') {
            steps {
                sh 'terraform init'
                sh 'terraform apply -auto-approve'
            }
        }

        stage('Ansible Deployment') {
            steps {
                git url: 'https://github.com/user/ansible-repo.git', branch: 'master'
                sh 'ansible-playbook site.yml'
            }
        }

        stage('Notify Telegram') {
            steps {
                sh 'curl -X POST https://api.telegram.org/bot<token>/sendMessage -d chat_id=<chat_id> -d text="Wordpress deployment has completed"'
            }
        }
    }
}
